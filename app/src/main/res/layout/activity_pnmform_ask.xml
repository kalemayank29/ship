                    />
                <EditText
                    android:layout_width="150dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/birthMonths"
                    android:textSize="25sp"
                    android:text=""
                    android:background="#cccccc"
                    android:inputType="number"
                    />

            </LinearLayout>

            <!-- "सुपरवायझर
             जन्म माहिती
             सुपरवायझर 'टॅब'  शी संपर्क साधा
             सुपरवायझर 'टॅब' वर सर्व पाठवा "-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="750dp"
                android:layout_marginBottom="125dp"
                android:background="@drawable/save_button_pressed"
                android:text="Save"
                android:textColor="#ffffff"
                android:id="@+id/saveAsk"
                android:onClick="save_click"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
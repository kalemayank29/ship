<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:orientation="horizontal"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="37dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/houseText"
            android:hint="House Id No."
            android:textSize="25sp"
            android:inputType="number" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameText"
            android:hint="Name"
            android:textSize="25sp"
            android:layout_marginTop="60dp"
            android:capitalize="sentences" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ageText"
            android:hint="Age"
            android:textSize="25sp"
            android:layout_marginTop="60dp"
            android:inputType="number" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/childText"
            android:hint="Child Id"
            android:textSize="25sp"
            android:layout_marginTop="60dp"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Marriage Status"
            android:layout_marginTop="20dp"
            android:textColor="#011936"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spin_marriage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="59dp"
            android:background="@drawable/spinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Family Planning"
            android:layout_marginTop="25dp"
            android:textColor="#011936"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spin_family_plan"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="59dp"
            android:background="@drawable/spinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Education"
            android:layout_marginTop="25dp"
            android:textColor="#011936"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spin_education"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="59dp"
            android:background="@drawable/spinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Literacy"
            android:layout_marginTop="20dp"
            android:textColor="#011936"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spin_literacy"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="59dp"
            android:background="@drawable/spinner" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Wedding Date (Departure)"
            android:layout_marginTop="0dp"
            android:textColor="#011936"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:id="@+id/showMyDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:textColor="#5AB49C"/>

            <Button android:id="@+id/myDatePickerButton"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/button_pressed"
                android:text="Choose"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:layout_marginLeft="15dp"/>


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Wedding Date (Arrival)"
            android:layout_marginTop="35dp"
            android:textColor="#011936"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:id="@+id/wedding_arr_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:textColor="#5AB49C"/>

            <Button android:id="@+id/wedding_arr_date_button"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:textColor="#ffffff"
                android:layout_marginTop="15dp"
                android:textSize="12dp"
                android:background="@drawable/button_pressed"
                android:text="Choose"
                android:layout_marginLeft="15dp"/>


            <Button android:id="@+id/localBtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:layout_marginTop="140dp"
                android:background="@drawable/button_pressed"
                android:text="Push"
                android:layout_marginLeft="-190dp"/>

            <Button android:id="@+id/viewLocal"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textColor="#ffffff"
                android:layout_marginTop="200dp"
                android:textSize="15dp"
                android:background="@drawable/button_pressed"
                android:text="View Members"
                android:layout_marginLeft="-200dp"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:orientation="horizontal"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="37dp">

        <EditText
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/nameText"
            android:hint="नाव "
            android:isScrollContainer="false"
            android:textSize="25sp"
            android:layout_marginTop="60dp"
            android:capitalize="sentences" />


        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/ageText"
            android:hint="वय "
            android:textSize="25sp"
            android:layout_marginTop="60dp"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:textSize="17sp"
            android:text="लिंग"
            android:textColor="#011936"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/man"
                android:onClick="genderClick"
                android:text="पुरुष"
                android:textSize="20sp"
                android:tag="man"
                android:buttonTint="#000000"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/woman"
                android:textSize="20sp"
                android:onClick="genderClick"
                android:text="स्त्री"
                android:tag="woman"
                android:buttonTint="#000000"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="विवाह स्थिती"
            android:layout_marginTop="20dp"
            android:textColor="#011936"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spin_marriage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="59dp"
            android:background="@drawable/spinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="कुटुंब नियोजनाचे ऑपरेशन"
            android:layout_marginTop="25dp"
            android:textColor="#011936"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="हो"
                android:id="@+id/familyPlanningYes"
                android:tag="yes"
                android:layout_marginTop="5dp"
                android:buttonTint="#000000"
                android:onClick="familyPlanningClick"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="नाही"
                android:id="@+id/familyPlanningNo"
                android:tag="no"
                android:layout_marginTop="5dp"
                android:buttonTint="#000000"
                android:onClick="familyPlanningClick"/>
        </LinearLayout>

        <!--<Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spin_family_plan"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="59dp"
            android:background="@drawable/spinner" />
-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="शिक्षण "
            android:layout_marginTop="15dp"
            android:textColor="#011936"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"/>


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spin_education"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="59dp"
            android:background="@drawable/spinner"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="आता लिहता वाचता येते का"
            android:layout_marginTop="20dp"
            android:textColor="#011936"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"/>

      <!--  <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spin_literacy"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="59dp"
            android:background="@drawable/spinner" />
        -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yes"
                android:text="हो"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="59dp"
                android:tag="yes"
                android:onClick="litClick"
                android:buttonTint="#000000"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no"
                android:text="नाही"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="59dp"
                android:tag="no"
                android:buttonTint="#000000"
                android:onClick="litClick"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="लग्न होऊन घरात आल्याची तारीख"
            android:layout_marginTop="0dp"
            android:textColor="#011936"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:id="@+id/showMyDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:textColor="#5AB49C"/>

            <Button android:id="@+id/myDatePickerButton"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/button_pressed"
                android:text="निवडा"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:layout_marginLeft="15dp"/>


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="लग्न होऊन घरातून गेल्याची तारीख"
            android:layout_marginTop="35dp"
            android:textColor="#011936"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:id="@+id/wedding_arr_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:textColor="#5AB49C"/>

            <Button android:id="@+id/wedding_arr_date_button"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:textColor="#ffffff"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:background="@drawable/button_pressed"
                android:text="निवडा"
                android:layout_marginLeft="15dp"/>


            <Button android:id="@+id/localBtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginTop="140dp"
                android:background="@drawable/save_button_pressed"
                android:text="सेव"
                android:layout_marginLeft="-125dp"/>




        </LinearLayout>


    </LinearLayout>

</LinearLayout>
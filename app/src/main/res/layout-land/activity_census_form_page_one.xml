<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/casteId"
            android:hint="Caste"
            android:textSize="25sp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pBusId"
            android:hint="Primary Business"
            android:textSize="25sp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aBus1Id"
            android:hint="Allied Business 1"
            android:textSize="25sp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aBus2Id"
            android:hint="Allied Business 2"
            android:textSize="25sp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aBus3Id"
            android:hint="Allied Business 3"
            android:textSize="25sp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="5dp">

        <!--   <EditText
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:id="@+id/rel"
               android:hint="Religion"
               android:textSize="25sp"
               android:layout_marginTop="20dp"/> -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Walls:"
            android:layout_marginTop="50dp"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"/>

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cement"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:checked="false"
            android:id="@+id/cementCheck" />

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Brick"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:checked="false"
            android:id="@+id/brickCheck" />

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sand"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:checked="false"
            android:id="@+id/sandCheck" />

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Junk"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:checked="false"
            android:id="@+id/junkCheck" />

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Others"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:checked="false"
            android:id="@+id/otherCheck" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Next"
            android:layout_marginTop="50dp"
            android:id="@+id/next"
            android:theme="@android:style/Theme.Holo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Religion:"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:layout_marginLeft="80dp"
            android:textStyle="bold"
            />


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinReligion"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="59dp"
            android:background="@drawable/spinner" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Who owns the house?"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:layout_marginLeft="80dp"
            android:textStyle="bold"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinHouseOwner"
            android:layout_below="@+id/spinHouseOwner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="59dp"
            android:background="@drawable/spinner"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Is there Electricity?"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:layout_marginLeft="80dp"
            android:textStyle="bold"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinElec"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="59dp"
            android:background="@drawable/spinner"
            />

    </LinearLayout>

</LinearLayout>


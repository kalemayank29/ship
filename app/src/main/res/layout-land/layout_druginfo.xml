<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ListView
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_gravity="center_vertical"
        android:entries="@array/drug_list"/>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:layout_marginLeft="60dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Generic Name"
            android:id="@+id/textView"
            android:layout_marginTop="16dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/editGeneric"
            android:textColor="#465362"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Brand Name"
            android:layout_marginTop="16dp"
            android:id="@+id/textView2"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#465362"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/editBrand" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Formula"
            android:layout_marginTop="16dp"
            android:id="@+id/textView3"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#465362"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/editFormula" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Drug Class"
            android:layout_marginTop="16dp"
            android:id="@+id/textView4"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#465362"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/editClass" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Color"
            android:layout_marginTop="16dp"
            android:id="@+id/textView5"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#465362"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/editColor" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Shape"
            android:layout_marginTop="16dp"
            android:id="@+id/textView6"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#465362"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/editShape" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="450dp">


        <Button
            android:text="More Information"
            android:id="@+id/moreInfoBtn"
            android:background="@drawable/button_pressed"
            android:layout_width="200dp"
            android:layout_height="62dp"
            android:layout_marginTop="350dp"
            android:textColor="#ffffff"
            android:textSize="17dp" />

    </LinearLayout>

</LinearLayout>